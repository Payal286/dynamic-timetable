@model dynamic_timetable.Models.TimeTableModel

<table style="width: 100%; border-collapse: collapse; text-align: center; font-family: Arial, sans-serif;">
    @for (int i = 0; i < Model.SubjectsPerDay; i++)
    {
        <tr>
            @for (int j = 0; j < Model.WorkingDays; j++)
            {
                int index = i * Model.WorkingDays + j;
                <td style="border: 1px solid #ccc; padding: 10px; font-size: 16px; background-color: #f9f9f9;">
                    @Model.Subjects[index]
                </td>
            }
        </tr>
    }
</table>
